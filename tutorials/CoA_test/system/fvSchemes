FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    // Euler implicit for maximum stability
    default         Euler;
}

gradSchemes
{
    // More robust gradient schemes for dynamic BCs
    default         cellLimited Gauss linear 0.33;
    grad(p)         cellLimited Gauss linear 0.25;
    grad(U)         cellLimited Gauss linear 0.33;
}

divSchemes
{
    default         none;
    
    // First-order upwind for maximum stability
    div(phi,U)      bounded Gauss upwind;
    
    // First-order for turbulence variables for stability
    div(phi,k)      bounded Gauss upwind;
    div(phi,epsilon) bounded Gauss upwind;
    div(phi,omega)  bounded Gauss upwind;
    div((nuEff*dev2(T(grad(U)))))  Gauss linear;
}

laplacianSchemes
{
    // Limited corrected for better stability on complex mesh
    default         Gauss linear limited corrected 0.33;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    // Limited for stability with non-orthogonal mesh
    default         limited corrected 0.33;
}



// ************************************************************************* //