FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        smoother        DIC;
        tolerance       1e-08;
        relTol          0.01;
        maxIter         100;
    }

    pFinal
    {
        solver          GAMG;
        smoother        DIC;
        tolerance       1e-09;
        relTol          0;
        maxIter         100;
    }

    "(U|k|epsilon|omega)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-08;
        relTol          0.01;
        maxIter         50;
    }

    "(U|k|epsilon|omega)Final"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-09;
        relTol          0;
        maxIter         50;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;

    residualControl
    {
        p               1e-2;
        U               1e-3;
        "(k|epsilon|omega)"   1e-3;
    }
}

PIMPLE
{
    // PIMPLE settings optimized for Windkessel BCs and pulsatile flow
    nOuterCorrectors 40;
    nCorrectors     3;
    nNonOrthogonalCorrectors 2;
    pRefPoint       (-0.013 -0.034 0.001);
    pRefValue       0;
    
    // Enable momentum predictor for stability
    momentumPredictor true;
    
    // Turbulence on final iteration only for efficiency
    turbOnFinalIterOnly false;

    // Very relaxed convergence criteria for problematic dynamic BCs
    correctorResidualControl
    {
        p
        {
            tolerance       1e-1;
            relTol          0.1;
        }
        U
        {
            tolerance       1e-2;
            relTol          0.1;
        }
    }

    outerCorrectorResidualControl
    {
        p
        {
            tolerance       1e-2;
            relTol          0.1;
        }
        U
        {
            tolerance       1e-3;
            relTol          0.1;
        }
        "(k|epsilon|omega)"
        {
            tolerance       1e-3;
            relTol          0.1;
        }
    }
}

relaxationFactors
{
    fields
    {
        p               0.2;  // Very strong under-relaxation for pressure
    }

    equations
    {
        U               0.3;  // Very conservative relaxation for velocity
        "(k|epsilon|omega).*"   0.2;  // Extremely conservative for turbulence
    }
}

cache
{
    grad(U);
}

