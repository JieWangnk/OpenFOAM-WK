FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// ************************************************************************* //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    // The inlet velocity boundary condition
    inlet
    {
        type            timeVaryingMappedFixedValue;
        offset          (0 0 0);
        setAverage      false;
    }

    // The outlets use stabilized boundary conditions to prevent backflow divergence
    outlet1
    {
        type                stabilizedWindkesselVelocity;
        beta                1.0;
        enableStabilization true;
    }
    outlet2
    {
        type                stabilizedWindkesselVelocity;
        beta                1.0;
        enableStabilization true;
    }
    outlet3
    {
        type                stabilizedWindkesselVelocity;
        beta                1.0;
        enableStabilization true;
    }
    outlet4
    {
        type                stabilizedWindkesselVelocity;
        beta                1.0;
        enableStabilization true;
    }

    // The wall condition is standardized here
    wall_aorta
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
}
// ************************************************************************* //